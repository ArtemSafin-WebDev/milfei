{{#extend "layout"}}
{{#content "main"}}


<section class="service-intro">
    <div class="service-intro__bg">
        <img src="img/promo.jpg" alt="" class="service-intro__bg-image">
        {{!-- <img src="img/intro-decor.svg" alt="" class="service-intro__decor-image"> --}}
    </div>

    <div class="container">
        <div class="service-intro__content">

            <div class="service-intro__breadcrumbs">
                <a href="#">
                    Главная
                </a>
                /
                <a href="#" class="active">
                    избранное
                </a>
            </div>
            <div class="service-intro__bottom-row">

                <h1 class="service-intro__heading service-intro__heading--centered">
                    избранное
                </h1>

            </div>
        </div>
    </div>
</section>

<section class="favourites">
    <div class="container">
        <div class="favourites__content js-favourites" data-action="/">
            <form>
                <input type="hidden" name="action" value="favorites">
            </form>
            <div class="services-results favourites__results">


                <ol class="services-results-list">
                    <li class="services-results-list-item">
                        <div class="service-card service-card--link">
                            <div class="service-card__content">
                                <h4 class="service-card__title">
                                    Фотоомоложение + инфракрасный термолифтинг BBL:
                                    Декольте
                                </h4>
                            </div>

                            <div class="service-card__price">
                                32 000 ₽
                            </div>
                            <a href="#callback-modal" class="service__card-link-wrapper">

                            </a>
                            <div class="service-card__btns">
                                <div class="service-card__like-btn-wrapper">
                                    <a href="#" class="service-card__like-btn" data-id="1">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-heart">
                                            <use xlink:href="#heart"></use>
                                        </svg>

                                    </a>
                                    <span class="service-card__like-btn-popover">
                                        <span class="service-card__like-btn-popover-inner">
                                            Добавлено в <a href="/favorites">избранное</a>
                                        </span>
                                    </span>
                                </div>
                                <a href="#callback-modal" class="service-card__btn">
                                    записаться
                                </a>
                            </div>
                        </div>
                    </li>
                    <li class="services-results-list-item">
                        <div class="service-card service-card--link">
                            <div class="service-card__content">
                                <h4 class="service-card__title">
                                    Фотоомоложение + инфракрасный термолифтинг BBL:
                                    Декольте
                                </h4>
                            </div>

                            <div class="service-card__price">
                                32 000 ₽
                            </div>
                            <a href="#" class="service__card-link-wrapper">

                            </a>
                            <div class="service-card__btns">
                                <div class="service-card__like-btn-wrapper">
                                    <a href="#" class="service-card__like-btn" data-id="2">
                                        <svg width="14" height="14" aria-hidden="true" class="icon-heart">
                                            <use xlink:href="#heart"></use>
                                        </svg>

                                    </a>
                                    <span class="service-card__like-btn-popover">
                                        <span class="service-card__like-btn-popover-inner">
                                            Добавлено в <a href="/favorites">избранное</a>
                                        </span>
                                    </span>
                                </div>
                                <a href="#" class="service-card__btn">
                                    подробнее
                                </a>
                            </div>
                        </div>
                    </li>

                </ol>
            </div>
            <div class="loader hidden">
                <div class="loader__inner">

                </div>
            </div>
            <div class="services-results__not-found">
                Результатов не найдено
            </div>
        </div>
    </div>
</section>

{{/content}}
{{/extend}}